# Telegram Chat Analyzer Configuration

# ======================================
# LLM API Keys (required for analysis)
# ======================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenRouter API Key (recommended for analysis templates)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# Google AI API Key (for Gemini)
GOOGLE_API_KEY=your-google-ai-api-key-here

# Groq API Key
GROQ_API_KEY=gsk_your-groq-api-key-here

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ======================================
# Vector Database Configuration
# ======================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# ======================================
# Default Settings
# ======================================

# Default cleaning approach: privacy, size, or context
DEFAULT_CLEANING_APPROACH=privacy

# Default cleaning level: 1 (basic), 2 (medium), or 3 (full)
DEFAULT_CLEANING_LEVEL=2

# Default LLM provider: openai, anthropic, google, groq, ollama, or openrouter
DEFAULT_LLM_PROVIDER=openrouter

# Default LLM model (provider-specific)
DEFAULT_LLM_MODEL=gpt-4

# Default embedding model for vectorization
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# ======================================
# Data Directory Configuration
# ======================================

# Base data directory (relative to project root)
DATA_DIR=data

# Input directory for Telegram JSON files
INPUT_DIR=input

# Output directory for cleaned files
OUTPUT_DIR=output

# Analysis directory for LLM results
ANALYSIS_DIR=analysis

# Vectors directory for embedding metadata
VECTORS_DIR=vectors

# ======================================
# Processing Configuration
# ======================================

# Maximum file size to process (in MB)
MAX_FILE_SIZE_MB=100

# Chunk size for text processing
TEXT_CHUNK_SIZE=1000

# Overlap between chunks
TEXT_CHUNK_OVERLAP=200

# Batch size for vector processing
VECTOR_BATCH_SIZE=100

# ======================================
# Web Interface Configuration
# ======================================

# Web server host
WEB_HOST=0.0.0.0

# Web server port
WEB_PORT=8000

# Enable CORS for web interface
ENABLE_CORS=true

# CORS allowed origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================================
# Logging Configuration
# ======================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/telegram_analyzer.log

# Enable file watching for auto-processing
ENABLE_FILE_WATCH=false

# File watch interval (seconds)
WATCH_INTERVAL=5

